<section id="sectionProds">
    <div class="container-md mt-5 border rounded p-3 bg-light">
        <div class="mt-2">
            <form id="altaProducto" class="needs-validation" novalidate>
                <div class="h5 mb-4">Ingrese un producto: </div>
                <div class="mb-3">
                    <input type="text" class="form-control" name="titulo" placeholder="Titulo" autocomplete="off" required>
                </div>
                <div class="mb-3">
                    <input type="number" class="form-control" name="precio" placeholder="Precio" autocomplete="off" required>
                </div>
                <div class="mb-3">
                    <input type="url" class="form-control" name="thumbnail" autocomplete="off" placeholder="Thumbnail">
                </div>
                <button type="submit" class="btn btn-secondary">ENVIAR</button>
            </form>
            <div id="res" class="mt-2"></div>
        </div>
    </div>
    <div class="container-md mt-5 px-0">
        {{#if productos}}
        <table class="table mb-0 border rounded border-bottom-0">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
                <th scope="col">Foto</th>
            </tr>
        </thead>
        <tbody class="productsContainer">
            
            {{#each productos}}
            <tr>
                <td>{{this.titulo}}</td>
                <td>{{this.precio}}</td>
                <td><img style="max-width: 60px;" src="{{this.thumbnail}}" alt="{{this.titulo}}" class="w-100"></td>
            </tr>
            {{/each}}
        </tbody>
        </table>
        {{else}}
        <table class="table mb-0 border rounded border-bottom-0">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
                <th scope="col">Foto</th>
            </tr>
        </thead>
        <tbody class="productsContainer">
            <tr>
                <td colspan="3">No hay productos en la lista</td>
            </tr>
        </tbody>
        </table>
        {{/if}}
    </div>
</section>
